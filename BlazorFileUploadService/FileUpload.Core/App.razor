@using Microsoft.Extensions.Localization
@inject IStringLocalizer<App> Localizer

<main>
    <Router AppAssembly="typeof(App).Assembly" Context="routeData">
        <Found>
            <RouteView RouteData="@routeData" />
        </Found>
        <NotFound>
            <p>@Localizer["This page doesn't exist."]</p>
        </NotFound>
    </Router>
</main>
